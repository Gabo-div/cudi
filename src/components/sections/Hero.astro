---
import Logo from "@/components/svg/logo.astro";
---

<section class="hero-height">
  <section id="home" class="relative">
    <div
      class="hero-height container mx-auto flex max-w-6xl items-center justify-center px-4"
    >
      <div class="flex w-full flex-col items-center">
        <div class="flex w-full justify-center overflow-hidden">
          <Logo class="size-52 fill-white" />
        </div>
        <h1 class="text-center text-4xl font-bold text-white md:text-6xl">
          Comunidad Universitaria
        </h1>
        <p class="mt-2 text-lg italic text-chetwode-500 md:text-xl">
          &quot; En busca de la excelencia &quot;
        </p>
      </div>
    </div>
  </section>
</section>
